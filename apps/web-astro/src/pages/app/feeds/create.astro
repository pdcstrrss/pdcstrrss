---
import { FORM_ACTIONS, FORM_SUBJECTS } from '@pdcstrrss/ui';
import Layout from '../../../layouts/Layout.astro';
import { LOGIN_API_URL } from '../../../lib/useAuth';
import { getUserFromRequest } from '../../../lib/useUser';
import { ROUTES } from '../../../lib/useRoutes';
import Form from '../../../components/Forms/Form.astro';
import { createFeed } from 'apps/web-astro/src/lib/useFeeds.server';

const { request } = Astro;
const { method } = request;

const user = await getUserFromRequest(Astro);
if (!user) return Astro.redirect(LOGIN_API_URL);

let error: string | undefined = undefined;
if (method === 'POST') {
  return createFeed({ user, request })
    .then(() => {
      return Astro.redirect(ROUTES.feeds);
    })
    .catch((err) => {
      error = err.message;
    });
}
---

<Layout>
  <div class="page container container-md">
    <header class="page-header">
      <h1 class="page-header-title">Add feed</h1>
    </header>
    <Form form={{ method: 'post' }} action={FORM_ACTIONS.CREATE} subject={FORM_SUBJECTS.FEED}>
      {
        error && (
          <div data-alert data-alert-danger>
            {error}
          </div>
        )
      }
      <div class="form-group">
        <label for="url">RSS feed URL</label>
        <input id="url" type="url" name="url" required placeholder="https://example.com/feed" />
      </div>
      <div class="form-actions">
        <button class="button button-primary" type="submit" data-text-content-on-submit="Adding feed...">
          Add feed
        </button>
        <a class="button button-link" href={ROUTES.feeds}>Cancel</a>
      </div>
    </Form>
  </div>
</Layout>
