---
import Layout from '../layouts/Layout.astro';
import { getUserFromRequest } from '../lib/useUser';
const user = await getUserFromRequest({ request: Astro.request });
---

<Layout title="Welcome to Astro.">
  <pre>
    <code>
      {JSON.stringify(user, null, 2)}
    </code>
  </pre>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
</style>
