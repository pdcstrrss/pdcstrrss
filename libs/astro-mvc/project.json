{
  "name": "astro-mvc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/astro-mvc/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/astro-mvc",
        "main": "libs/astro-mvc/src/index.ts",
        "tsConfig": "libs/astro-mvc/tsconfig.lib.json",
        "assets": ["libs/astro-mvc/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/astro-mvc/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/libs/astro-mvc"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/astro-mvc"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    }
  },
  "tags": []
}
