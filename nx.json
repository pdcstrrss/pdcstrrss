{
  "npmScope": "pdcstrrss",
  "affected": {
    "defaultBase": "main"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e", "typecheck", "build-storybook", "check"]
      }
    }
  },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "dev": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "start": [
      {
        "target": "build",
        "projects": "self"
      }
    ]
  },
  "defaultProject": "web-remix",
  "generators": {
    "@nrwl/react:component": {
      "pascalCaseFiles": true,
      "pascalCaseDirectory": true
    }
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": ["@nxtensions/astro"]
}
